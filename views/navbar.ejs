<header>
  <h1>Codiel</h1>
  <nav id="navigation">
    <ul>
      <% if(locals.user) { %>
      <li id="avatar">
        <img src="<%= user.avatar %>" alt="<%= user.name %>">
        <a href="/users/profile/<%= user.id %>"><%= user.name  %></a>
      </li>
      <li>
        <a href="/users/logout">Logout</a>
      </li>
      <% } else {%>
        <li>
          <a href="/users/login">Sign In</a>
        </li>
        <li>
          <a href="/users/register">Sign Up</a>
        </li>
        <% } %>
    </ul>
  </nav>
</header>